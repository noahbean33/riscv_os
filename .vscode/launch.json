{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug RISC-V QEMU",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/kernel.elf",
      "cwd": "${workspaceFolder}",
      "miDebuggerPath": "/home/<YOUR USERNAME>/opt/riscv/bin/riscv64-unknown-elf-gdb",
      "miDebuggerServerAddress": "localhost:1234",
      "stopAtEntry": true,
      "preLaunchTask": "Run QEMU",
    }
  ]
}